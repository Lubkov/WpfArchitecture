<Window x:Class="Architecture.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:core="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Architecture.App"
        xmlns:viewmodel="clr-namespace:Architecture.App.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="720" 
        Width="900" 
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>        
        <BooleanToVisibilityConverter x:Key="BoolToVisible"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Button 
                Command="{Binding ToggleMapSelectionPanelCommand}"
                Height="32" 
                Content="Open"
                FontFamily="{StaticResource BaseFont}"
                FontSize="{StaticResource Regular}" />
        </StackPanel>

        <Border 
            Name="MapSelection"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Height="Auto"
            Width="Auto"  
            MinHeight="220"
            MinWidth="600"
            MaxHeight="520"
            MaxWidth="1120"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"  
            Visibility="{Binding IsMapSelectionPanelVisible, Converter={StaticResource BoolToVisible}}"         
            Background="{StaticResource MediumBaseBrush}" 
            BorderBrush="{StaticResource LightBaseBrush}"
            BorderThickness="1"
            CornerRadius="6" 
            Margin="20"
            Padding="5"
            Panel.ZIndex ="2"  
            Cursor="">

            <ListBox   
                x:Name="MapListBox"
                ItemsSource="{Binding Maps}"
                SelectedItem="{Binding CurrentMap, Mode=TwoWay}"
                Background="{StaticResource MediumBaseBrush}" 
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                BorderThickness="0">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template" Value="{StaticResource MapListItems}" />
                    </Style>                   
                    
                </ListBox.ItemContainerStyle>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ItemSelectedCommand}"
                                           CommandParameter="{Binding SelectedItem, ElementName=MapListBox}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
        </Border>

        <StackPanel Grid.Column="1" Margin="10">
            <StackPanel>
                <TextBox Text="{Binding NewMapName, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Add Game Location" Command="{Binding AddMapCommand}" Margin="0,5,0,5"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentMap.Id}" FontSize="{StaticResource Regular}" Padding="2" Margin="10"/>
                    <TextBlock Text="{Binding CurrentMap.Name}" FontSize="{StaticResource Regular}" Padding="2" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>        
</Window>
