<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="MapListItems" TargetType="ListBoxItem">
        <Grid>
            <Border
                Name="brd"
                MaxWidth="210"
                Margin="5,5,5,5"
                Background="{StaticResource LightBaseBrush}"
                Padding="4"
                CornerRadius="6"
                Cursor="Hand">

                <StackPanel>
                    <Image Name="img" Source="{Binding Picture}"/>
                    <TextBlock
                        Name="txt"
                        Margin="5,2,5,2"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource BaseFont}"
                        FontSize="{StaticResource Regular}"
                        FontWeight="Bold"
                        FontStretch="UltraExpanded"
                        Foreground="{StaticResource LightBrush}"
                        Style="{StaticResource BaseText}"
                        Text="{Binding Name}"
                        TextAlignment="Center"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>                
            </Border>
        </Grid>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="brd" Property="Background" Value="{StaticResource UltraLightBaseBrush}" />
                <Setter TargetName="img" Property="Opacity" Value="0.6" />
                <Setter TargetName="txt" Property="Foreground" Value="{StaticResource MediumBrush}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
</ResourceDictionary>